+    const values = labels.map(k => parseFloat(byDay[k].toFixed(2)))
+
+    if (transactionsChart) {
+        transactionsChart.destroy()
+    }
+
+    const ctx = canvas.getContext('2d')
+    transactionsChart = new Chart(ctx, {
